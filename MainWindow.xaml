<Window x:Class="HappyTetris.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸ€„" 
        Height="800" Width="550"
        MinHeight="700" MinWidth="500"
        WindowStartupLocation="CenterScreen"
        Background="#1a0a0a"
        KeyDown="Window_KeyDown"
        FontSize="18"
        ResizeMode="CanResizeWithGrip"
        WindowStyle="SingleBorderWindow">
    
    <Window.Resources>
        <!-- Chinese Theme Colors -->
        <Color x:Key="ChineseRed">#c41e3a</Color>
        <Color x:Key="ChineseGold">#ffd700</Color>
        <Color x:Key="ChineseYellow">#ffcc00</Color>
        <Color x:Key="Cream">#fff8e7</Color>
        <Color x:Key="Jade">#00a86b</Color>
        
        <SolidColorBrush x:Key="ChineseRedBrush" Color="{StaticResource ChineseRed}"/>
        <SolidColorBrush x:Key="ChineseGoldBrush" Color="{StaticResource ChineseGold}"/>
        <SolidColorBrush x:Key="ChineseYellowBrush" Color="{StaticResource ChineseYellow}"/>
        <SolidColorBrush x:Key="CreamBrush" Color="{StaticResource Cream}"/>
        <SolidColorBrush x:Key="JadeBrush" Color="{StaticResource Jade}"/>
        
        <!-- Button Styles -->
        <Style x:Key="NavBarButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource ChineseGoldBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ChineseGoldBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource ChineseGoldBrush}"/>
                    <Setter Property="Foreground" Value="#1a0a0a"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="GoldButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#ffd700" Offset="0"/>
                        <GradientStop Color="#ffcc00" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="#1a0a0a"/>
            <Setter Property="BorderBrush" Value="{StaticResource CreamBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="40,20"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <!-- Left Side Navigation Bar -->
        <Border Width="80" HorizontalAlignment="Left" Background="#2d1515">
            <Border BorderBrush="{StaticResource ChineseGoldBrush}" BorderThickness="0,0,2,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Top: Title -->
                    <TextBlock Grid.Row="0" Text="ðŸ€„" FontSize="48" 
                               Foreground="{StaticResource ChineseGoldBrush}" 
                               HorizontalAlignment="Center" VerticalAlignment="Top"
                               Margin="0,20,0,0"/>
                    
                    <!-- Center: Score Stats with Symbols -->
                    <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <StackPanel Margin="0,0,0,30" HorizontalAlignment="Center">
                            <TextBlock Text="ðŸ†" FontSize="28" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="ScoreText" Text="0" Foreground="{StaticResource CreamBrush}" 
                                       FontSize="32" FontWeight="Bold" HorizontalAlignment="Center"
                                       Margin="0,5,0,0" MinWidth="80"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,0,0,30" HorizontalAlignment="Center">
                            <TextBlock Text="â­" FontSize="28" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="LevelText" Text="1" Foreground="{StaticResource CreamBrush}" 
                                       FontSize="32" FontWeight="Bold" HorizontalAlignment="Center"
                                       Margin="0,5,0,0" MinWidth="40"/>
                        </StackPanel>
                        
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="ðŸ“‹" FontSize="28" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="LinesText" Text="0" Foreground="{StaticResource CreamBrush}" 
                                       FontSize="32" FontWeight="Bold" HorizontalAlignment="Center"
                                       Margin="0,5,0,0" MinWidth="40"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Bottom: Help and Audio Buttons -->
                    <StackPanel Grid.Row="2" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,20">
                        <Button x:Name="AudioBtn" Content="ðŸ”Š" Style="{StaticResource NavBarButton}"
                                Click="AudioBtn_Click" Margin="0,0,0,15" FontSize="32" Padding="20,15"/>
                        <Button x:Name="HelpBtn" Content="â“" Style="{StaticResource NavBarButton}"
                                Click="HelpBtn_Click" FontSize="32" Padding="20,15"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>
        
        <!-- Main Game Area -->
        <Grid Margin="80,0,0,0">
            <Border x:Name="GameBorder" BorderBrush="{StaticResource ChineseGoldBrush}" BorderThickness="4"
                    CornerRadius="10" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Background="#1a0a0a" Width="368" Height="728">
                <Canvas x:Name="GameCanvas" Width="360" Height="720" ClipToBounds="True"/>
            </Border>
            
            <!-- Start Overlay -->
            <Border x:Name="StartOverlay" Background="#1a0a0af5" Visibility="Visible">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ€„" FontSize="120" 
                               Foreground="{StaticResource ChineseGoldBrush}" HorizontalAlignment="Center"
                               Margin="0,0,0,30"/>
                    <Button x:Name="StartBtn" Content="ðŸŽ®" Style="{StaticResource GoldButton}"
                            Click="StartBtn_Click" Width="150"/>
                    <TextBlock Text="âŒ¨ï¸ â£" FontSize="24" Foreground="{StaticResource ChineseGoldBrush}" 
                               HorizontalAlignment="Center" Margin="0,25,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Game Over Overlay -->
            <Border x:Name="GameOverOverlay" Background="#1a0a0af5" Visibility="Collapsed">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ˜¢" FontSize="120" 
                               Foreground="{StaticResource ChineseGoldBrush}" HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>
                    <TextBlock x:Name="FinalScoreText" Text="0" FontSize="72" FontWeight="Bold" 
                               Foreground="{StaticResource ChineseYellowBrush}" HorizontalAlignment="Center"
                               Margin="0,0,0,30"/>
                    <Button x:Name="RestartBtn" Content="ðŸ”„" Style="{StaticResource GoldButton}"
                            Click="RestartBtn_Click" Width="150"/>
                </StackPanel>
            </Border>
            
            <!-- Pause Overlay -->
            <Border x:Name="PauseOverlay" Background="#1a0a0af5" Visibility="Collapsed">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="â¸ï¸" FontSize="120" 
                               Foreground="{StaticResource ChineseYellowBrush}" HorizontalAlignment="Center"
                               Margin="0,0,0,30"/>
                    <Button x:Name="ResumeBtn" Content="â–¶ï¸" Style="{StaticResource GoldButton}"
                            Click="ResumeBtn_Click" Width="150"/>
                    <TextBlock Text="âŒ¨ï¸ P" FontSize="24" Foreground="{StaticResource ChineseGoldBrush}" 
                               HorizontalAlignment="Center" Margin="0,25,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
