<Window x:Class="HappyTetris.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="å¿«ä¹ä¿„ç½—æ–¯æ–¹å—"
        Height="860" Width="550"
        MinHeight="860" MinWidth="500"
        WindowStartupLocation="CenterScreen"
        Background="#2A2A2A"
        KeyDown="Window_KeyDown"
        FontSize="18"
        ResizeMode="CanResizeWithGrip"
        WindowStyle="SingleBorderWindow"
        Icon="pack://application:,,,/HappyTetris;component/Assets/Logo/app.ico">
    
    <Window.Resources>
        <!-- Softer, Less Distracting Colors -->
        <Color x:Key="ChineseGold">#B8860B</Color>
        <Color x:Key="ChineseYellow">#DAA520</Color>
        <Color x:Key="Cream">#F5F5DC</Color>

        <SolidColorBrush x:Key="ChineseGoldBrush" Color="{StaticResource ChineseGold}"/>
        <SolidColorBrush x:Key="ChineseYellowBrush" Color="{StaticResource ChineseYellow}"/>
        <SolidColorBrush x:Key="CreamBrush" Color="{StaticResource Cream}"/>
        
        <!-- Button Styles -->
        <Style x:Key="NavBarButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource ChineseGoldBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ChineseGoldBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource ChineseGoldBrush}"/>
                    <Setter Property="Foreground" Value="#1a0a0a"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="GoldButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#ffd700" Offset="0"/>
                        <GradientStop Color="#ffcc00" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="#1a0a0a"/>
            <Setter Property="BorderBrush" Value="{StaticResource CreamBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="40,20"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SidebarStatCard" TargetType="Border">
            <Setter Property="Background" Value="#331a0a0a"/>
            <Setter Property="BorderBrush" Value="{StaticResource ChineseGoldBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="6,8"/>
            <Setter Property="Width" Value="94"/>
        </Style>

        <Style x:Key="SidebarNumberText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource CreamBrush}"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <!-- Left Side Navigation Bar -->
        <Border Width="110" HorizontalAlignment="Left" Background="#3A3A3A">
            <Border BorderBrush="{StaticResource ChineseGoldBrush}" BorderThickness="0,0,2,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Top: Logo -->
                    <Image Grid.Row="0" Source="pack://application:,,,/HappyTetris;component/Assets/Logo/logo.png"
                           Width="64" Height="64" HorizontalAlignment="Center" VerticalAlignment="Top"
                           Margin="0,20,0,0" RenderOptions.BitmapScalingMode="HighQuality"/>
                    
                    <!-- Center: Score Stats with Symbols -->
                    <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Border Style="{StaticResource SidebarStatCard}" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="ðŸ†" FontSize="22" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="ScoreText" Text="0" Style="{StaticResource SidebarNumberText}" FontSize="16" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource SidebarStatCard}" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="â­" FontSize="22" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="LevelText" Text="01" Style="{StaticResource SidebarNumberText}" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource SidebarStatCard}">
                            <StackPanel>
                                <TextBlock Text="ðŸ“‹" FontSize="22" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="LinesText" Text="000" Style="{StaticResource SidebarNumberText}" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    
                    <!-- Bottom: Help and Audio Buttons -->
                    <StackPanel Grid.Row="2" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,20">
                        <Button x:Name="PauseBtn" Content="â¸ï¸" Style="{StaticResource NavBarButton}"
                                Click="PauseBtn_Click" Margin="0,0,0,15" FontSize="32" Padding="20,15" ToolTip="æš‚åœ"/>
                        <Button x:Name="AudioBtn" Content="ðŸ”Š" Style="{StaticResource NavBarButton}"
                                Click="AudioBtn_Click" Margin="0,0,0,15" FontSize="32" Padding="20,15"/>
                        <Button x:Name="HelpBtn" Content="â“" Style="{StaticResource NavBarButton}"
                                Click="HelpBtn_Click" FontSize="32" Padding="20,15"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>
        
        <!-- Main Game Area -->
        <Grid Margin="110,0,0,0">
            <Border x:Name="GameBorder" BorderBrush="{StaticResource ChineseGoldBrush}" BorderThickness="4"
                    CornerRadius="10" HorizontalAlignment="Center" VerticalAlignment="Stretch"
                    Background="#2A2A2A">
                <Viewbox Stretch="Uniform">
                    <Canvas x:Name="GameCanvas" Width="360" Height="720" ClipToBounds="True"/>
                </Viewbox>
            </Border>

            <!-- Start Overlay -->
            <Border x:Name="StartOverlay" Background="#2A2A2Af5" Visibility="Visible">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="pack://application:,,,/HappyTetris;component/Assets/Logo/logo.png"
                           Width="160" Height="160" HorizontalAlignment="Center"
                           Margin="0,0,0,30" RenderOptions.BitmapScalingMode="HighQuality"/>
                    <Button x:Name="StartBtn" Content="ðŸŽ®" Style="{StaticResource GoldButton}"
                            Click="StartBtn_Click" Width="120" Height="60"/>
                    <TextBlock Text="âŒ¨ï¸ â£" FontSize="20" Foreground="{StaticResource ChineseGoldBrush}" 
                               HorizontalAlignment="Center" Margin="0,20,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Game Over Overlay -->
            <Border x:Name="GameOverOverlay" Background="#2A2A2Af5" Visibility="Collapsed">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ˜¢" FontSize="96"
                               Foreground="{StaticResource ChineseGoldBrush}" HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>
                    <TextBlock x:Name="FinalScoreText" Text="0" FontSize="56" FontWeight="Bold"
                               Foreground="{StaticResource ChineseYellowBrush}" HorizontalAlignment="Center"
                               Margin="0,0,0,25"/>
                    <Button x:Name="RestartBtn" Content="ðŸ”„" Style="{StaticResource GoldButton}"
                            Click="RestartBtn_Click" Width="120" Height="60"/>
                </StackPanel>
            </Border>

            <!-- Pause Overlay -->
            <Border x:Name="PauseOverlay" Background="#2A2A2Af5" Visibility="Collapsed">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="â¸ï¸" FontSize="96"
                               Foreground="{StaticResource ChineseYellowBrush}" HorizontalAlignment="Center"
                               Margin="0,0,0,30"/>
                    <Button x:Name="ResumeBtn" Content="â–¶ï¸" Style="{StaticResource GoldButton}"
                            Click="ResumeBtn_Click" Width="120" Height="60"/>
                    <TextBlock Text="âŒ¨ï¸ P" FontSize="20" Foreground="{StaticResource ChineseGoldBrush}"
                               HorizontalAlignment="Center" Margin="0,20,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
